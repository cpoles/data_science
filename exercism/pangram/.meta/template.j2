{%- import "generator_macros.j2" as macros with context -%}
{% macro test_case(case) -%}
    {%- set input = case["input"] -%}
    def test_{{ case["description"] | to_snake }}(self):
        self.assertIs(
            {{ case["property"] | to_snake }}("{{ case["input"]["sentence"].replace('"', '\\"') }}"),
            {{ case["expected"] }}
        )
{%- endmacro %}
