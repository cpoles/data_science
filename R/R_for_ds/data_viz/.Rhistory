### Exercises
# Map a continuous variable to color, size and shape
ggplot(data = mpg) +
geom_point(mapping = aes(x = displ, y = hwy, color = year))
ggplot(data = mpg) +
geom_point(mapping = aes(x = displ, y = hwy, shape = year))
ggplot(data = mpg) +
geom_point(mapping = aes(x = displ, y = hwy, color = year))
ggplot(data = mpg) +
geom_point(mapping = aes(x = displ, y = hwy, size = year))
ggplot(data = mpg) +
geom_point(mapping = aes(x = displ, y = hwy, size = year, alpha = year, color = year))
?geom_point
# change border width using stroke
ggplot(data = mpg) +
geom_point(mapping = aes(x = displ, y = hwy, color = year), stroke = 5)
# change border width using stroke
ggplot(data = mpg) +
geom_point(mapping = aes(x = displ, y = hwy, color = class), stroke = 5)
# change border width using stroke
ggplot(data = mpg) +
geom_point(mapping = aes(x = displ, y = hwy, color = class), stroke = 2)
# change size of points using stroke
ggplot(data = mpg) +
geom_point(mapping = aes(x = displ, y = hwy, color = displ < 5), stroke = 2)
# conditional format. splits color in < 5 and >= 5
ggplot(data = mpg) +
geom_point(mapping = aes(x = displ, y = hwy, color = displ < 5), stroke = 2)
